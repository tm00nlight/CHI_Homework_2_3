<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".RelativeWithCheckboxActivity">

    <TextView
        android:id="@+id/activeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/yellow_button"
        android:padding="20dp"
        android:text="@string/button_text" />

    <CheckBox
        android:id="@+id/optionBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activeButton"
        android:layout_centerHorizontal="true"
        android:text="@string/blue"
        android:textColor="@color/blue"/>

    <CheckBox
        android:id="@+id/optionRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/activeButton"
        android:layout_centerVertical="true"
        android:text="@string/red"
        android:textColor="@color/red"/>

    <CheckBox
        android:id="@+id/optionGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activeButton"
        android:layout_centerVertical="true"
        android:text="@string/green"
        android:textColor="@color/green"/>

    <CheckBox
        android:id="@+id/optionYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activeButton"
        android:layout_centerHorizontal="true"
        android:text="@string/yellow"
        android:textColor="@color/yellow"/>

</RelativeLayout>